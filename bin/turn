#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)

loop do
  while true
    user_input = gets
    index = input_to_index(user_input)
      
    if valid_move?(board, index)
      move(board, index)
      turn(board)
      display_board(board)
    else 
      turn(board)
      end
  end
end
